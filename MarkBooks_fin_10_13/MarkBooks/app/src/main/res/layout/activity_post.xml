<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".post.PostActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/wemakeprice_bold"
        android:text="책 신청"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:src="@drawable/ic_book"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="제목 : "
            android:gravity="fill_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/wemakeprice_bold"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/post_title_edit"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wemakeprice_regular"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="fill_vertical"
            android:fontFamily="@font/wemakeprice_bold"
            android:text="저자 : "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/post_author_edit"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wemakeprice_regular"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="출판사 : "
            android:gravity="fill_vertical"
            android:fontFamily="@font/wemakeprice_bold"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/post_publish_edit"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wemakeprice_regular"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="기타 요청사항"
            android:gravity="center"
            android:fontFamily="@font/wemakeprice_bold"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/post_publish_detail"
            android:layout_gravity="center"
            android:layout_width="330dp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wemakeprice_regular"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/post_save_button"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/wemakeprice_bold"
        android:text="등록하기"
        app:cardElevation="10dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_custom_button"
        android:textStyle="bold"
        android:textSize="25dp"/>



</LinearLayout>