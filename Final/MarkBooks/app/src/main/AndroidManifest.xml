<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.markbooks">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarkBooks" >
        <activity
            android:name=".login.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop">

        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".login.RegisterActivity"
            android:exported="true" />

        <activity android:name=".common.MyBookActivity"/>
        <activity android:name=".highlight.HighlightActivity"/>

        <activity
            android:name=".common.BookInfoActivity"
            android:launchMode="singleTop"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <activity android:name=".common.ResultActivity"/>
        <activity android:name=".post.PostActivity" />
        <activity android:name=".post.PostingActivity" />
        <activity android:name=".post.Post2Activity" />
        <activity android:name=".highlight.Highlight2Activity" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>